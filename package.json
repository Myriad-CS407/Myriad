{
  "name": "Myriad",
  "version": "0.0.0",
  "description": "A tool for quickly reading multi-media",
  "main": "index.js",
  "scripts": {
    "build-css": "stylus source/stylesheets/index.styl -o static/css",
    "watch-css": "stylus source/stylesheets/index.styl -o static/css -w",
    "clean": "rm -rf static/css && mkdir -p static/css",
    "build": "npm run clean && npm run build-css",
    "watch": "npm run clean && npm run watch-css & nodemon server -e js,jade",
    "start": "node server"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Myriad-CS407/Myriad.git"
  },
  "author": "Andrew Thomas, Adam Tremonte, Joe Xu, Cody Henderson",
  "license": "Apache 2.0",
  "bugs": {
    "url": "https://github.com/Myriad-CS407/Myriad/issues"
  },
  "dependencies": {
    "morgan": "~1.7.0",
    "express": "~4.14.0",
    "stylus": "~0.54.5",
    "jade": "~1.11.0",
    "nodemon": "~1.9.2"
  }
}
