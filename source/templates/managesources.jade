extend layout

block page_title
  span.h2 Settings

block our_title
  span Manage Sources

block content
  div.container
    div.row
      div.col-xs-9
        h2 Sources
      div.col-xs-3
        h2
          a.btn.btn-default(type="submit", role="button", href="news_sources")
            span.glyphicon.glyphicon-plus
  div#Content.container-fluid(ng-controller="AppCtrl", ng-cloak="", layout-gt-sm="row", layout="column", ng-app="MyApp")
    div(flex="")
      md-content
        div(layout="row")
          md-list(flex="", style="background:white")
            md-list-item.md-2-line(ng-repeat="item in websites", style="border-bottom: ridge #D3649F")
              div.md-list-item-text.col-xs-10
                h3.title {{ item.title }}
              div.md-list-item-text.col-xs-2
                a.adam-trashcan
                  span.glyphicon.glyphicon-trash

