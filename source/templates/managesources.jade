extend layout

block page_title
  span.h2 Settings

block our_title
  span Manage Sources

block content
  div#Content.container-fluid(ng-controller="AppCtrl", ng-cloak="", layout-gt-sm="row", layout="column", ng-app="MyApp")
    div.row
      div.col-xs-9
        h2 Sources
      div.col-xs-3
        h2
          a.btn.btn-default(type="submit", role="button", href="news_sources")
            span.glyphicon.glyphicon-plus
    div.row
      div(flex="100")
        md-content
          div(layout="row")
            md-list.md-dense(flex="100", style="background:white")
              md-list-item.md-2-line(ng-repeat="item in websites", style="border-bottom: ridge #D3649F")
                div.md-list-item-text.col-xs-8
                  span(style="font-size:17pt") {{ item.title }}
                div.md-list-item-text.col-xs-4
                  md-button.md-raised.md-accent.md-hue-1(style="float:right;min-width: 36px;padding-left: 10px;padding-right: 10px;") &times;

